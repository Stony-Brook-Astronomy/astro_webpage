   border-bottom-width: thin;
   color: #777777;
}

#people tr.legend
{
   font-size: 10pt;
   text-align: left;
   color: #777777;
}

#people td.legend
{
   font-size: 10pt;
   text-align: left;
   color: #777777;
}


#people table 
{
   margin-left: auto;
   margin-right: auto;
   padding: 0;
   border: 0px;
}

#people caption
{
   font-size: 10pt;
   padding: 0;
   margin: 2em auto;
   text-align: left;
}

#people p
{
   padding: 0;
   margin: 0.5em 0 0 0; 
   font-size: 10pt;
}


#people em.title
{
   font-size: 10pt;
   color: #555555;
}


#people em.interests
{
   font-size: 10pt;
   color: #000000;
}

#people em.email
{
   font-size: 10pt;
   color: #000000;
}


#bigright 
{
   font-size: 10pt;
   color: gray;
   float: right;
   width: 330px;
   margin: 0 0 10px 15px;
   padding: 5px;
   border: none;
   text-align: left;
}

.fac_right {float: right;
           width: 200px;
           margin: 0 0 15px 20px;
           padding: 5px;
           border: none;
           text-align: center;}

.fac_left {float: left;
           width: 150px;
           margin: 0 20px 15px 0px;
           padding: 3px;
           border: none;
           text-align: center;}



#alumni
{
}

#alumni ul 
{
   padding: 0em;
   margin: 1em 0 0 4em;
   border: none;
}

#alumni li 
{
   padding: 0.5em;
}



/*
   the footer is at the bottom of each page
*/

#footer
{
   clear: both;
   text-align: center;
   margin: 0;
   padding: .5em;
   color: white;
   background-color: #990000;
   border-top: 1px solid gray;
   font: normal 14px "Trebuchet MS", Arial, Helvetica, sans-serif;
}

